<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_last_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="获取最近一次定位信息"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
    <Button
        android:id="@+id/btn_camera_intent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="相机 Intent"
        app:layout_constraintLeft_toLeftOf="@id/btn_last_location"
        app:layout_constraintBottom_toTopOf="@id/btn_last_location"/>
    <Button
        android:id="@+id/btn_camera_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="相机 camera X"
        app:layout_constraintLeft_toLeftOf="@id/btn_camera_intent"
        app:layout_constraintBottom_toTopOf="@id/btn_camera_intent"/>
    <Button
        android:id="@+id/btn_camera_camera2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="相机 camera2"
        app:layout_constraintLeft_toLeftOf="@id/btn_camera_x"
        app:layout_constraintBottom_toTopOf="@id/btn_camera_x"/>
    <TextView
        android:id="@+id/tv_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>